<h2>Accounts</h2>

       <% @accounts.each do |account| %>
        <div class='ui grey segment'>
           <h3><%= link_to account.name, account_path(account)%></h3><br>
          
           Tier: <%= account.tier %><br>
          Industry: <%= account.industry %><br>
           ACV: $<%= account.acv %><br>
           Owner: <%= account.user.username.capitalize %><br><br>
           </div>
       <% end %>

    <div class="ui button">    
   <%= link_to "Add an Account", new_account_path%>
   </div>