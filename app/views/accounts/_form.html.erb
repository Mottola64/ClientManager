<%= form_for(@account) do |f| %>

    <%= f.hidden_field :user_id %>
    
    <%= f.label :name %>
    <%= f.text_field :name %>
  
    <%= f.label :industry %>
    <%= f.text_field :industry %>
  
    <%= f.label :tier %>
    <%= f.select(:tier, [ "ODSS", "Mid-Market", "Enterprise" ]) %>
  
    <%= f.label :strategist %>
    <%= f.text_field :strategist %>

    <%= f.label :acv %>
    <%= f.number_field :acv, min:0 %>
  
    <%= f.submit %>
  
  <% end %>